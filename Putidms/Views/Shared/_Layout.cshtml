<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 菩提书院辅导员管理系统</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("辅导员管理系统", "index", "home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("辅导员", "index", "counselor")</li>
                    <li>@Html.ActionLink("修学处", "index", "division")</li>
                    <li>@Html.ActionLink("修学点", "index", "department")</li>
                    <li>@Html.ActionLink("班级", "index", "klass")</li>
                    <li>@Html.ActionLink("岗位", "index", "duty")</li>                    
                    @Html.Action("MenuNavUser", "Home");

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @Html.Action("MenuNavLogin","Home")
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top:20px;">
        @{
            foreach (var key in TempData.Keys)
            {
                <div class="alert alert-@key.ToString() alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert"
                            aria-hidden="true">
                        &times;
                    </button>
                    @TempData[key.ToString()]
                </div>
            }
        }
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - 菩提书院  </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
